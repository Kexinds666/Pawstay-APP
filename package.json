{
  "name": "projectpawstay",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "bootstrap": "pnpm install",
    "dev:mobile": "cd apps/mobile && npx react-native start",
    "ios": "cd apps/mobile && npx react-native run-ios",
    "android": "cd apps/mobile && npx react-native run-android",
    "setup:ios": "cd apps/mobile/ios && pod install || true",
    "build:api": "cd services/api && pnpm build",
    "dev:api": "cd services/api && pnpm dev",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "deploy:infra": "cd infra && terraform apply"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "turbo": "^2.1.1",
    "typescript": "^5.6.3",
    "rimraf": "^6.0.1"
  }
}